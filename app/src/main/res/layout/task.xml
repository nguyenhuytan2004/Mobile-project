<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="&lt;"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:paddingHorizontal="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/listNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="ðŸ‘‹ Welcome"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/dropDownList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â–¼"
            android:textColor="#545454"
            android:textSize="24sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="â‹®"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingHorizontal="30dp">

        <CheckBox
            android:id="@+id/taskCheckBox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:button="@drawable/ic_checkbox_notcompleted"
            android:buttonTint="@color/gray" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/taskCheckBox"
            android:layout_marginLeft="15dp"
            android:text="@string/task_repeat"
            android:textColor="#545454"
            android:textSize="16sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">


        <EditText
            android:id="@+id/titleInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/task_title"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"
            android:inputType="textMultiLine"/>

        <EditText
            android:id="@+id/contentInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/task_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:textSize="20sp"
            android:background="@color/black"/>
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        xmlns:flexbox="http://schemas.android.com/apk/res-auto"
        android:id="@+id/attachmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        flexbox:flexWrap="wrap"
        flexbox:justifyContent="flex_start"
        android:padding="30dp">
    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        xmlns:flexbox="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tagContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        flexbox:flexWrap="wrap"
        flexbox:justifyContent="flex_start"
        android:padding="30dp"
        android:layout_weight="1">
    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/cardIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tag_icon"
                android:layout_marginEnd="30dp"
                />

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/album_icon"
                android:layout_marginEnd="30dp"
                />

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/time_icon" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="20sp"
                android:textColor="@color/statistics_blue"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
