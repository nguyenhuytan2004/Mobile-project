<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <!-- Ảnh minh họa -->
    <ImageView
        android:id="@+id/imgIllustration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="illustration"
        android:src="@drawable/tag_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.6"/>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đặt lời nhắc và sắp xếp công việc"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgIllustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"/>

    <!-- Button Đăng nhập với Apple -->
    <Button
        android:id="@+id/btnLoginApple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đăng nhập với Apple"
        android:drawablePadding="8dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Button Đăng nhập bằng Google -->
    <Button
        android:id="@+id/btnLoginGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đăng nhập bằng Google"
        android:drawablePadding="8dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnLoginApple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Button Đăng nhập bằng Email -->
    <Button
        android:id="@+id/btnLoginEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đăng nhập bằng email"
        android:drawablePadding="8dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnLoginGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Text "Nhiều hơn nữa" -->
    <TextView
        android:id="@+id/tvMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhiều hơn nữa"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnLoginEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
