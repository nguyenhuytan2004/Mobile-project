<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo hàng ngày"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Toggle Thông báo hàng ngày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông báo hàng ngày"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng quan về các nhiệm vụ Hôm nay vào một thời điểm cố định hàng ngày (bao gồm các nhiệm vụ quá hạn và cả ngày)."
                    android:textColor="#AAAAAA"
                    android:textSize="14sp"/>
            </LinearLayout>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>
        </LinearLayout>

        <!-- Cài đặt thông báo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00"
                    android:padding="8dp"
                    android:background="#FF8800"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Thêm"
                    android:textColor="#FF8800"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Loại nhiệm vụ thông báo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại của nhiệm vụ thông báo"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nhiệm vụ quá hạn"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nhiệm vụ cả ngày"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Ngày kích hoạt hàng tuần -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày kích hoạt hàng tuần"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CN"
                android:padding="8dp"
                android:textColor="#888888"
                android:textSize="14sp"
                android:background="#333333"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T2"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="#FF8800"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T3"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="#FF8800"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T4"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="#FF8800"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T5"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="#FF8800"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T6"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="#FF8800"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T7"
                android:padding="8dp"
                android:textColor="#888888"
                android:textSize="14sp"
                android:background="#333333"
                android:gravity="center"
                android:paddingHorizontal="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
