<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCalendarView" parent="Theme.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/gray</item>
        <item name="android:weekDayTextAppearance">@style/CustomCalendarWeekDay</item>
        <item name="android:dateTextAppearance">@style/CustomCalendarDate</item>
    </style>

    <style name="CustomCalendarWeekDay" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CustomCalendarDate" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/statistics_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">#2C2C2C</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/statistics_blue</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/gray</item>
    </style>
</resources>